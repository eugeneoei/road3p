<h1>this is the page where user views one post</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
      <div class="thumbnail">
        <img src="<%= post.image_url %>" alt="...">
        <div class="caption">
          <h3><%= post.title %></h3>
          <% if (post.address) { %>
            <p><%= post.address %></p>
          <% } %>
          <p><%= post.category %></p>
          <p><%= post.description %></p>
          <p>
            <a href="/posts/<%= post.id %>/edit">Edit</a>
            <a href="/posts/delete">Delete</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
