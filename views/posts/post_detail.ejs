<h1>this is the page where user views one post</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
      <div class="thumbnail thumbnail-one">
        <img class='post-image img-responsive' src="<%= post.image_url %>" alt="...">
        <div class="caption">
          <h3><%= post.title %></h3>
          <% if (post.address) { %>
            <p><%= post.address %></p>
          <% } %>
          <p><%= post.category %></p>
          <p><%= post.description %></p>
          <% if (post.userId == currentUser.id) { %>
          <p>
            <a class="btn btn-default" role='button' href="/posts/<%= post.id %>/edit">Edit</a>
            <form method="POST" action="/posts/<%= post.id %>?_method=DELETE">
              <button class="btn btn-default" type="submit">Delete</button>
            </form>
          </p>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
