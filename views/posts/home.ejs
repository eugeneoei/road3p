</div>

<div class="container box">
  <!-- <div id='create-button' class="col-md-4 col-md-offset-4">
    New Post
  </div> -->
  <a id='create-button' class="btn btn-default col-md-4 col-md-offset-4" role="button">New Post</a>
</div>

<div id='create-form' class="container box">
  <div class="col-md-4 col-md-offset-4">
    <form action='/posts' method="post">

      <div class="form-group">
        <div class='col-md-12'>
          <small>Title</small>
          <input class='form-input' type="text" name="title" placeholder="Title of your post">
          <small>Address</small>
          <input class='form-input' type="text" name="address" placeholder="Address of place of interest">
          <small>Category</small>
          <select name="category">
            <% categories.forEach(function(category) { %>
              <option value="<%= category.dataValues.name %>"><%= category.dataValues.name %></option>
            <% }) %>
          </select>
          <small>Image</small>
          <input class='form-input' type="text" name="image_url" placeholder="Image URL here">
          <small>Description</small>
          <input class='form-input' type="text" name="description" placeholder="Tell us what's good about this place!">
          <button class="btn btn-default" type="submit">Create</button>
        </div>
      </div>

    </form>
  </div>
</div>
