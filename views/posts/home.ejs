<div class="container">
  <!-- <div id='create-button' class="col-md-4 col-md-offset-4">
    New Post
  </div> -->
  <a id='create-button' class="btn btn-default button-link col-md-2 col-md-offset-2 col-sm-2 col-sm-offset-2 col-xs-2 col-xs-offset-2" href='#create-form' role="button">New Post</a>
  <a id='user-posts-button' class="btn btn-default button-link col-md-2 col-md-offset-1 col-sm-2 col-sm-offset-1 col-xs-2 col-xs-offset-1" href='posts/user' role="button">Your Posts</a>
  <select class="category-select col-md-2 col-md-offset-1 col-sm-2 col-sm-offset-1 col-xs-2 col-xs-offset-1" name="category-select">
    <option>Choose a Category</option>
    <option value="All">All</option>
    <% categories.forEach(function(category) { %>
    <option value="<%= category.dataValues.name %>"><%= category.dataValues.name %></option>
    <% }) %>
  </select>
</div>

<div class="container col-md-10 col-md-offset-1 col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1" id='map'></div>


<div id='create-form' class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
    <form action='/posts' method="post">

      <div class="form-group">
        <div class='col-md-12'>
          <small>Title</small>
          <input class='form-input' type="text" name="title" placeholder="Title of your post" style='margin-bottom:5%;'><br>
          <small>Address</small>
          <input class='form-input' type="text" name="address" placeholder="Address of place of interest" style='margin-bottom:5%;'><br>
          <small>Category</small>
          <select style='margin-top:5%; margin-bottom:5%' name="category" class='category-select col-md-12 col-sm-12 col-xs-12'>
            <% categories.forEach(function(category) { %>
            <option value="<%= category.dataValues.name %>"><%= category.dataValues.name %></option>
            <% }) %>
          </select><br>
          <small>Image</small>
          <input class='form-input' type="text" name="image_url" placeholder="Image URL here" style='margin-bottom:5%;'><br>
          <small>Description</small><br>
          <textarea style='margin-top:5%; margin-bottom:5%' class="entry form-input" type="text" name="description" rows="10" cols="40" placeholder="Tell us what's good about this place!"></textarea><br>
          <!-- <input class='form-input' type="text" name="description" placeholder="Tell us what's good about this place!"> -->
          <button class="btn btn-default form-button" type="submit">Create</button>
        </div>
      </div>

    </form>
  </div>
</div>

<div id='ajax-post'></div>
