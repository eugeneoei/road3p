<div id='map'></div>

<% if (message) { %>
  <div class="container" style='text-align:center;'>
    <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12">
      <div class="row">
        <div class="col-md-12 roboto-font" style='font-size:100px;'>
          <strong>Ooops!</strong>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 roboto-font" style='font-size:25px;'>
          <%= message %>
          <a href="/home" class='click-here'><span class='grow'>Click here</span></a> and create one!
        </div>
      </div>
    </div>
  </div>
<% } else { %>
  <div class="container">
    <div class="row">
      <% posts.forEach(function(post) { %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail thumbnail-own">
          <img class='post-image img-responsive' src="<%= post.image_url %>" alt="...">
          <div class="caption">
            <h3><%= post.title %></h3>
            <% if (post.address) { %>
              <p><%= post.address %></p>
            <% } %>
            <p><%= post.category %></p>
            <% if (post.description.length > 150) { %>
            <% var description = post.description %>
            <p>
              <%= description.slice(0,150) %>...
              <a href="/posts/<%= post.id %>">Read More</a>
            </p>
            <% } else { %>
            <p><%= post.description %></p>
            <% } %>

            <div class="col-md-12">
              <div class="col-md-5 col-md-offset-1 col-sm-5 col-sm-offset-1 col-xs-4 col-xs-offset-2">
                <a href="/posts/<%= post.id %>">
                  <button type="button" class="btn btn-default btn-lg post-button">
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Read
                  </button>
                </a>
              </div>
              <div class="col-md-5 col-sm-5 col-xs-4">
                <form method="POST" action="/posts/<%= post.id %>?_method=DELETE">
                  <button id='delete-button' type="submit" class="btn btn-default btn-lg post-button">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
                  </button>
                </form>
              </div>
            </div>

          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
<% } %>
